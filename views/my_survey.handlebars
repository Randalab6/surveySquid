<!-- main container -->
<div id="feedContainer" class="wrapper">
    <!-- search button -->
    <div class="row search-wrapper">
        <div class="input-field col-5 mx-auto mb-3">
            <i class="material-icons prefix pt-3">search</i>
            <input id="searchSurvey" placeholder="Search" type="text">
        </div>
    </div>
    <!-- Survey Card -->
	<div class="row">
	    <div class="col s12 m6">
		{{#each surveyDetails}}
	        <div class="card horizontal surveyCard" id="surveyCard{{survey_id}}">
	            <div class="card-body">
	                <h5 class="card-title">{{survey_name}}</h5>
	                <p class="card-text">{{survey_desc}}</p>
	            </div>
                <div class="card-footer bg-transparent border-success" id="divSurveyCardFooter">                 
                    <button type="button" id="{{survey_id}}" class="btn btn-primary view-survey ml-2">
                        Results
                    </button>
                    <button type="button" id="{{survey_id}}" class="btn btn-primary share-survey  ml-4">
                        <i class="material-icons prefix">share</i>
                    </button>
                </div>
	        </div>
		{{/each}}
	    </div>
	</div>
    <!-- Popup Result Modal -->
    <div id="modalSurveyResult" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h5 id="modelResultSurveyName">Modal title</h5>
            <div id="barChart" width="600" height="400"></div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCloseModal">Close</button>
        </div>
    </div>
    <!-- Popup Share Modal -->
    <div id="modalSurveyShare" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h5 id="modelResultSurveyName">Share your survey</h5>
            <p>Your target auidence can access and respond to the survey via the URL below. You can copy and share the URL with them</p> 
            <a id="aSurveyUrl" target="_blank"></a>
            <hr>
            <p>You can also share your survey on the following social media</p>
            <ul>
              <li>
                <a id="aFacebookShare" class="facebook customer share" href="https://www.facebook.com/sharer.php?u=" title="Facebook share" target="_blank">Facebook</a>
              </li>
              <li>
                <a id="aTwitterShare" class="twitter customer share" href="https://twitter.com/share?url=https://codepen.io/patrickkahl&amp;text=Share popup on &amp;hashtags=codepen" title="Twitter share" target="_blank">Twitter</a>
              </li>
              <li>
                <a id="aLinkedInShare" class="linkedin customer share" href="https://www.linkedin.com/shareArticle?mini=true&url=https://codepen.io/patrickkahl" title="linkedin Share" target="_blank">LinkedIn</a>
              </li>
            </ul>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCloseModal">Close</button>
        </div>
    </div>
    <div class="push"></div>
</div>
<script type="text/javascript" src="/javascript/login.js"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<script type="text/javascript" src="/javascript/my_survey.js"></script>