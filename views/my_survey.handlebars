<!-- main container -->
<div id="feedContainer" class="wrapper">
    <!-- search button -->
    <div class="row search-wrapper">
        <div class="input-field col-5 mx-auto mb-3">
            <i class="material-icons prefix pt-3">search</i>
            <input id="searchSurvey" placeholder="Search" type="text">
        </div>
    </div>
    <!-- Survey Card -->
	<div class="row">
	    <div class="col s12 m6">
		{{#each surveyDetails}}
	        <div class="card horizontal surveyCard" id="surveyCard{{survey_id}}">
	            <div class="card-body">
	                <h5 class="card-title">{{survey_name}}</h5>
	                <p class="card-text">{{survey_desc}}</p>
	                <button type="button" id="btn{{survey_id}}" class="btn btn-primary view-survey">
	                    Survey Results
	                </button>
	            </div>
	        </div>
		{{/each}}
	    </div>
	</div>
    <!-- Popup Modal -->
    <div id="modalSurveyResult" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h5 id="modelResultSurveyName">Modal title</h5>
            <p id="modelResultSurveyQuestion">Survey question</p>
            <br>
            <canvas id="popChart" width="600" height="400"></canvas>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCloseModal">Close</button>
        </div>
    </div>

    <div class="push"></div>
</div>
<script type="text/javascript" src="/javascript/login.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<script type="text/javascript" src="/javascript/my_survey.js"></script>